{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/v2/(.*)",
      "destination": "https://credilinq-blog-production.up.railway.app/api/v2/$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "https://credilinq-blog-production.up.railway.app/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 